CC = gcc

SRC = 	src/my_draw_line.c		\
	src/my_put_pixel.c		\
	src/my_parallel_projection.c	\
	my_strncpy.c			\
	my_strlen.c			\
	my_getnbr.c			\
	my_split.c			\
	my_basic_funct.c		\
	openfile.c			\
	creat_panel_matrix.c		\
	wireframe_ext.c			\
	wireframe.c

CFLAGS = -W -Wall -Werror -I./include/

LDFLAGS = -lc_graph_prog -lm

OBJ = $(SRC:.c=.o)

NAME = wireframe

all : $(NAME)

$(NAME) : $(OBJ)
	$(CC) -o $(NAME) $(OBJ) $(LDFLAGS)

clean :
	rm -f $(OBJ)

fclean : clean
	rm -f $(NAME)

re : fclean all
