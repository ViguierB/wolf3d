#ifndef WOLF_H_
# define WOLF_H_

# define ABS(x) (((x) < 0) ? -(x) : (x))
# define IS_IN(nbr, x, y) (((nbr) >= (x)) && ((nbr) <= (y)))
# define MIN(x, y) (((x) > (y)) ? (x) : (y))

#endif /* !WOLF_H_ */
