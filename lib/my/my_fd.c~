#include <sys/types.h>
#include <sys/stat.h>
#include <fcntl.h>
#include <unistd.h>
#include "libmy.h"

t_my_fd		*my_fopen(char *path, int flags)
{
  t_my_fd	*res;

  res = malloc(sizeof(t_my_fd));
  if (!res)
    return(NULL);
  res->index = 0;
  res->fd = open(path, flags);
  if (res->fd < 0)
    return (NULL);
  return (res);
}
